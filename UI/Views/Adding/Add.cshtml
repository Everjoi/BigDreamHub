@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using MySite.Models;
@model Song;




<form method="post" asp-action="AddSong" asp-controller="Admin" >

  <div>
    <label for="Name">Title:</label>
        <input type="text" id="songName" asp-for="Title">
  </div>


   <p>
        <label for="songAuthors">Author:</label>
        <select name="author" asp-for="Authors.FirstOrDefault().Name"  >

            @foreach(var item in new BigDreamHdbContext().Authors)
            {
                <option >@item.Name</option>
            }

        </select>
   </p>

    <p>
        <label for="songStyles">Style:</label>
        <select name="style" asp-for="Styles.FirstOrDefault().Name"  >

            @foreach(var item in new BigDreamHdbContext().Styles)
            {
                <option>@item.Name</option>
            }

           
        </select>
    </p>


  <button type="submit">Add Song</button>
    <button type="button" onclick="window.location.href='/home/index'">Home</button>

    @if(TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>          
    }
</form>





